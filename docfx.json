{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "docs/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "docs",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Inventory Documentation",
      "_appTitle": "Inventory Documentation",
      "_appLogoPath": "images/belfor_environmental.png",
      "pdf": true
    }
  }
}